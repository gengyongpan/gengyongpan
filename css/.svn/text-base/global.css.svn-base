@charset "utf-8";
/* CSS Document */

* {
    margin:0;
    padding:0;
    box-sizing: border-box;
}
body {
    font-family: '微软雅黑', sans-serif;
    font-size:62.5%;
    color:#000;
    background: transparent;
}
ul {
    list-style:none;
}
h1, h2, h3, h4, h5, h6 {
    font-family:Arial, Helvetica, sans-serif;
}
img {
    border:0;
    vertical-align: text-bottom;
}
a {
    text-decoration:none;
    color:#000;
}
html{
    -webkit-text-size-adjust:none;/* 此行代码为了解决中文版chrome不支持小于12px字体定义 */
}

.clear {
    clear:both;
}
.no-padding {
    padding:  0
}

.no-margin {
    margin: 0;
}

.text-overflow {
    overflow:hidden;;/* 内容超出宽度时隐藏超出部分的内容 */
    text-overflow:ellipsis;;/* 当对象内文本溢出时显示省略标记(...) ；需与overflow:hidden;一起使用。*/
    white-space:nowrap;/* 不换行 */
}

.chartBorder {
    border-image: url(../images/border.png) 13 13 stretch stretch;
    border-width: 10px;
    border-radius: 10px;
    background-color: rgba(0, 104, 167, 0.3);
    position: relative;
}

.light {
    color: #fff;
    text-shadow: 0 0 10px #6AC7E8, 0 0 20px #6AC7E8;
}

/*-----风格化边框样式-----*/
.chartBorder2 {
    width: 100%;
    height: 100%;
    border-image: url(../images/border2.png) 0 10 10 20 stretch stretch;
    border-width: 25px 10px 10px 15px;
    /*position: relative;*/
}

.chartBorder2::before {
    content: "";
    position: absolute;
    width: 15px;
    height: calc(100% - 60px);
    left: 0;
    top: 0;
    margin-top: 60px;
    background: url(../images/border2_left.png) no-repeat;
    background-size: 100% 100%;
}

.title2 {
    width: 100%;
    height: 52px;
    font-family: "Microsoft Yahei";
    z-index: 99999;
    display: -webkit-box;
    position: absolute;
}

.title2Ball {
    background: url(../images/title2_ball.png) no-repeat top right;
    width: 76px;
    height: 60px;
}

.title2Left {
    background: url(../images/title2_left.png) repeat-x;
    background-size: 100% 100%;
    height: 100%;
    font-size: 18px;
    font-weight: normal;
    color: #fff;
    text-shadow:initial;
    padding: 0 5px;
}

.title2Slash {
    background: url(../images/title2_slash.png) no-repeat;
    width: 20px;
    height: 100%;
}

.title2Center {
    background: url(../images/title2_center.png) repeat-x;
    height: 100%;;
    -webkit-box-flex: 2;
}

.chartBorder2_flip {
    border-image: url(../images/border2_flip.png) 0 20 10 10 stretch stretch;
    border-width: 25px 15px 10px 10px;
}
.chartBorder2_flip::before {
    right: 0;
    left: auto;
    transform: scaleX(-1);
}

.title2_flip {
    -webkit-box-direction: reverse;
}

.title2_flip .title2Ball, .title2_flip .title2Slash {
    transform: scaleX(-1);
}

.chartBorder3 {
    width: 100%;
    height: 100%;
    border-image: url(../images/border3.png) 0 10 10 15 stretch stretch;
    border-width: 25px 10px 10px 15px;
}

.chartBorder3::before {
    content: "";
    position: absolute;
    width: 10px;
    height: calc(100% - 60px);
    left: 0;
    top: 0;
    margin-top: 60px;
    background: url(../images/border3_left.png) no-repeat;
    background-size: 100% 100%;
}

.title3 {
    width: 100%;
    height: 69px;
    font-family: "Microsoft Yahei";
    z-index: 99999;
    display: -webkit-box;
    position: absolute;
}

.title3Ball {
    width: 49px;
    height: 100%;
    background: url(../images/title3_ball.png) no-repeat top left;
}

.title3Left {
    background: url(../images/title3_left.png) repeat-x;
    background-size: 100% 100%;
    height: 100%;
    font-size: 18px;
    font-weight: normal;
    color: #fff;
    text-shadow: 0 0 10px #fff,
    0 0 20px #fff,
    0 0 30px #6AC7E8;
    padding: 0 5px;
}

.title3Slash {
    background: url(../images/title3_slash.png) no-repeat;
    width: 44px;
    height: 100%;
}

.title3Center {
    background: url(../images/title3_center.png) repeat-x;
    -webkit-box-flex: 2;
    height: 100%;
}

.title3Right {
    background: url(../images/title3_right.png) no-repeat;
    width: 43px;
    height: 100%;
}

.chartBorder3_flip {
    border-image: url(../images/border3_flip.png) 0 15 10 10 stretch stretch;
    border-width: 25px 15px 10px 10px;
}
.chartBorder3_flip::before {
    right: 0;
    left: auto;
    transform: scaleX(-1);
}

.title3_flip {
    -webkit-box-direction: reverse;
}

.title3_flip .title3Ball, .title3_flip .title3Slash, .title3_flip .title3Right {
    transform: scaleX(-1);
}
<%@ page language="java" contentType="text/html; charset=utf-8"
	pageEncoding="UTF-8"%>
<%
	String contextPath = request.getContextPath();
	String chartID = request.getParameter('chartID');
	String dataURL = request.getParameter('dataURL');
%>
<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>税费优化</title>
    <!-- Bootstrap -->
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/global.css" rel="stylesheet">
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="js/html5shiv.min.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->
    <style>
        .chart_title {
            z-index: 0;
            position: absolute;
            top: 9px;
            margin-left: 33px;
        }

        .chart_title_text{
            float: left;
            color: #8CD6EE;
            font-family: "Microsoft Yahei";
            font-weight: bold;
            font-size: 1.4rem;
            width: 113px;
            height: 140px;
            /*background: url('images/pie_bg.png') no-repeat center top;*/
            margin-left: 64px;
            padding: 115px 0 0 0;
            text-align: center;
        }
        .chart_title_text_first {
            margin-left: 0px;
        }
        .theme_2 .chart_title_text{
        	color:#5c0000;
        }
        .theme_2 .text_title {
            color: #5c0000;
            margin-left: 40px;
            font-size: 12px;
            padding-top: 5px;
            font-family: '微软雅黑'
        }
    </style>
</head>
<body>
<div style="width: 740px; height: 165px;">
    <div id="sfyh" style="width: 708px; height: 100%;">
    </div>
    <div class="chart_title">
        <div class="chart_title_text chart_title_text_first">税收入库比例</div>
        <div class="chart_title_text">正常缴税金额比例</div>
        <div class="chart_title_text">税收计划达成率</div>
        <div class="chart_title_text">税收计划调整比率</div>
    </div>
</div>


<script src="js/jquery-1.11.2.min.js"></script>
<script src="js/bootstrap.min.js"></script>
<script src="js/echarts-2.2.3/build/dist/echarts-all.js"></script>
<script src="js/global.js"></script>
<script src="js/theme_custom.js"></script>
<script type="text/javascript">
// 主题更换--框
changeBodyColor();

    var sfyh =  echarts.init(document.getElementById('sfyh'));

    var labelTop = {
        normal : {
            label : {
                show : false,
                // position : 'center',
                // formatter : '{b}',
                textStyle: {
                    baseline : 'bottom'
                }
            },
            labelLine : {
                show : false
            }
        }
    };
    var labelFromatter = {
        normal : {
            //color:'#A8E3F5',
            label : {
                formatter : function (params){
                    return 1000 - params.value
                },
                textStyle: {
                    baseline : 'middle',
                    color:changeEchartsColor().color[0],//'#9DE7FF',
                    fontSize:'18'
                }
            }
        }
    }
    var labelBottom = {
        normal : {
            color: 'rgba(245, 247, 250, 0)',
            label : {
                show : true,
                position : 'center'
            },
            labelLine : {
                show : false
            }
        }
        // emphasis: {
        //     color: 'rgba(0,0,0,0)'
        // }
    };
    var radius = [32, 45];
    option = {
        series : [
            {
                type : 'pie',
                center : ['12.5%', '45%'],
                radius : radius,
                x: '0%', // for funnel
                itemStyle : labelFromatter,
                // data : [
                    // {name:'other', value:466, itemStyle : labelBottom},
                    // {name:'报关单查获率', value:534,itemStyle : labelTop}
                // ]
            },
            {
                type : 'pie',
                center : ['37.5%', '45%'],
                radius : radius,
                x:'25%', // for funnel
                itemStyle : labelFromatter,
                // data : [
                    // {name:'other', value:513, itemStyle : labelBottom},
                    // {name:'风险布控率', value:487,itemStyle : labelTop}
                // ]
            },
            {
                type : 'pie',
                center : ['62.5%', '45%'],
                radius : radius,
                x:'50%', // for funnel
                itemStyle : labelFromatter,
                // data : [
                    // {name:'other', value:281, itemStyle : labelBottom},
                    // {name:'稽查有效率', value:719,itemStyle : labelTop}
                // ]
            },
            {
                type : 'pie',
                center : ['87.5%', '45%'],
                radius : radius,
                x:'75%', // for funnel
                itemStyle : labelFromatter,
                // data : [
                    // {name:'other', value:466, itemStyle : labelBottom},
                    // {name:'稽查企业覆盖率', value:534,itemStyle : labelTop}
                // ]
            }
        ]
    };
    // 为echarts对象加载数据
    
   			 var contextPath = "<%=contextPath%>";
			var dataURL = "<%=dataURL%>";
        	(function(){
			var datas = {
				chartMoudleId: "",
				sqlParams: {}
			};
			$.ajax({
	            type: "POST",
	            async: false,
	            url: getChartDataURL(dataURL, contextPath) + '?chartMoudleId=',
	            dataType: "json",
	            data: datas,
	            success: function (msg) {
	            	var option_data = eval('(' + msg.data[0].option + ')');
	            	var strOptionCode = sessionStorage.getItem("echarts_option_<%=chartID%>");
	            	(new Function(strOptionCode))();
	            	option_data = copyJSONAtoB_noArrayNull(_option, option_data);
	            	sfyh.setOption(option_data);
	            },
	            error: function (xhr, txt, err) {
	                console.log(xhr.status + ":" + txt + ", " + err.message);
	            }
			});
		})(); 
    sfyh.setTheme(changeEchartsColor());
    appendPieBg(sfyh, 1.15);
</script>
</body>
</html>
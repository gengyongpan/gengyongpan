        }

        .theme_2 #circles-slider .ui-slider-handle {
            border-radius: 23px;
            height: 18px;
            width: 18px;
            top: -4px;
            margin-left: -11px;
            border: 2px solid #fffaf7;
            background: #fd9a31;
        }

    </style>
</head>

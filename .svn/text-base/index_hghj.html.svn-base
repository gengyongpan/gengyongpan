<script>
//主题更换
	changeBodyColor();
    // 基于准备好的dom，初始化echarts图表

    $(document).ready(function () {
        $.getJSON("http://219.141.183.219:8081/haiguan_jiandanchaxun/dm/findnormal.do?DIM_YEAR_NAME=2014", function (json) {
            //alert("JSON Data: " + json.data.f_GDP);
            var GDP_num = (json.data.f_GDP / 1000000000000).toFixed(0);
            var CPI_num = (json.data.f_CPI / 1000000000000).toFixed(0);
            var my_num = (json.data.f_TZZS / 100000000).toFixed(0);
            var snc_num = ((json.data.f_JKZZ - json.data.f_CKZE) / 100000000).toFixed(0);
            $("#GDP_num").html(GDP_num + '万亿');
            $("#CPI_num").html(CPI_num + '万亿');
            $("#my_num").html(my_num + '亿');
            $("#snc_num").html(snc_num + '亿');
        });
  		adjustWidgetScale();
    });


    $("#circles-slider")
            .slider({
                min: 1992,
                max: 2015,
                value: 2014,
                step: 1
            })
            .slider("pips", {
                rest: "label",
                step: 1
            })
            
</script>

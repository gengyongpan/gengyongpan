    <style>
        body {
            background: transparent;
        }

        #hghj {
            color: #8CD6EE;
            font-family: "Microsoft Yahei";
            font-size: 1.8rem;
            font-weight: bold;
            margin: 0;
        }

        .hghj_ul {
            background: url('images/hghj_bg.png');
            width: 220px;
            height: 144px;
            margin: 0 auto;
        }

        .ul_title {
            text-indent: 58px;
            font-size: 1.6rem;
            color: #fff;
            text-shadow: 0 0 10px #6AC7E8,
            0 0 20px #6AC7E8;
        }

        .hghj_ul li {
            padding: 0 0 0 43px;
            font-size: 1.4rem;
            line-height: 22px;
            clear: both;
        }

        .hghj_ul li div {
            display: block;
            float: left;
        }

        .hghj_ul li span {
            display: block;
            float: left;
        }

        #hghj .col-xs-3 {
            padding: 0;
            margin: 25px 0 0 0;
        }

        .country {
            display: inline-block;
            width: 35%;
        }

        .num {
            width: 25%;
            font-size: 1.2rem;
            color: #fff;
            text-shadow: 0 0 10px #6AC7E8, 0 0 20px #6AC7E8;
        }

        .bili {
            width: 20%;
            text-align: right;
            font-size: 1.2rem
        }

        .arrow {

        }

        .sliderOuter {
            margin: 33px 0 0 11px;
            height: 38px;
            background: #075279;
            text-align: center;
            padding: 2px 0 0 0;
        }

        #circles-slider.ui-slider {
            border-radius: 20px;
            background: #398DBC;
            border: none;
            height: 10px;
            margin: 0.5em 4em 4em;
        }
        .theme_2 #circles-slider.ui-slider {
            border-radius: 20px;
            background: #ffe4a9;
            border: none;
            height: 10px;
            margin: 0.5em 4em 4em;
        }

        #circles-slider .ui-slider-handle {
            border-radius: 23px;
            height: 18px;
            width: 18px;
            top: -4px;
            margin-left: -11px;
            border: 2px solid #fffaf7;
            background: #F8F8F8;
        }

        #circles-slider .ui-slider-pip {
            top: 3px;
        }

        #circles-slider .ui-slider-pip .ui-slider-line {
            width: 4px;
            height: 4px;
            border-radius: 4px;
            margin-left: -2px;
            background: #fffaf7;
        }

        #circles-slider .ui-slider-pip.ui-slider-pip-last .ui-slider-line,
        #circles-slider .ui-slider-pip.ui-slider-pip-first .ui-slider-line {
            display: none;
        }

        .ui-slider-pips .ui-slider-label {
            top: 13px;
        }

        #circles-slider .ui-slider-pip.ui-slider-pip-selected-initial {
            font-weight: normal;
        }

        #circles-slider .ui-slider-pip.ui-slider-pip-selected {
            font-weight: bold;
        }

        #circles-slider .ui-slider-pip.ui-slider-pip-selected,
        #circles-slider .ui-slider-pip.ui-slider-pip-selected-initial {
            color: #434d5a;
        }

        .ui-slider-label {
            color: #D8F9FF;
        }
        /*红色主题*/
        .theme_2 .hghj_ul {
            background: url('images/hghj_bg_red.png');
            width: 220px;
            height: 144px;
            margin: 0 auto;
        }
        .theme_2 .sliderOuter {
            margin: 33px 0 0 11px;
            height: 38px;
            background: #8a0101;
            text-align: center;
            padding: 2px 0 0 0;
        }

        .theme_2 #circles-slider.ui-slider {
            border-radius: 20px;
            background: #fe2423;
            border: none;
            height: 10px;
            margin: 0.5em 4em 4em;

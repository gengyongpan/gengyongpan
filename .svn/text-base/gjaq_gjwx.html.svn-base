$(function () {
    var echart_0101 = echarts.init(document.getElementById("widget_0101"), theme_custom);
    var option = {
        tooltip: {
            trigger: 'item'
        },
        calculable: true,
        grid: {
            borderWidth: 0,
            x: '5%',
            x2: '5%',
            y: '10%',
            y2: '10%'
        },
        xAxis: [
            {
                type: 'value',
                show: false
            }
        ],
        yAxis: [
            {
                type: 'category',
                show: false,
                data: ['安全', '经济', '环境', '其它']
            }
        ],
        series: [
            {
                name: '结案案件数和价值',
                type: 'bar',
                itemStyle: {
                    normal: {
                         color: function(params) {
                            // build a color map as your need.
                             // var colorList = [
                                 // '#5AADCB','#147095','#6493A3','#4E8395','#0A4156'
                             // ];
                             return changeEchartsColor().color[params.dataIndex]
                         },
                        label: {
                            show: true,
                            position: 'right',
                            formatter: '{b}',
                            textStyle: {
                                color:  '#F5DB26'
                            }
                        }
                    }
                },
                data: [12,21,10,4]
            }
        ]
    };
    echart_0101.setOption(option);
    echart_0101.setTheme(changeEchartsColor());
});

